# ============================================================================
# CONFIGURACIÓN DEL PROYECTO - Banana Disease Classifier
# ============================================================================
# Copia este archivo a .env y ajusta los valores según tu entorno
# cp .env.example .env

# ============================================================================
# RUTAS DE DATOS
# ============================================================================
DATA_DIR=./dataset/train
VAL_DIR=./dataset/val
TEST_DIR=./dataset/test

# ============================================================================
# CONFIGURACIÓN DE ENTRENAMIENTO
# ============================================================================
# Modelo: convnext_tiny, convnext_small, convnext_base, convnext_large
MODEL_NAME=convnext_base
EPOCHS=50
BATCH_SIZE=32
LEARNING_RATE=0.0001

# Augmentation: light, medium, heavy
AUGMENTATION_LEVEL=medium

# Device: auto, cuda, mps, cpu
DEVICE=auto

# ============================================================================
# EXPERIMENTO
# ============================================================================
EXPERIMENT_NAME=banana_experiment
EXPERIMENTS_DIR=./experiments

# Directorios del experimento (se crean automáticamente dentro de EXPERIMENTS_DIR/EXPERIMENT_NAME)
# Dejar vacío para usar valores por defecto: {EXPERIMENTS_DIR}/{EXPERIMENT_NAME}/{directorio}
CHECKPOINT_DIR=
OUTPUT_DIR=
LOG_DIR=
INTERPRETATION_DIR=

# ============================================================================
# WANDB (Experiment Tracking)
# ============================================================================
USE_WANDB=false
WANDB_PROJECT=banana-disease-classifier
WANDB_ENTITY=

# ============================================================================
# BASE DE DATOS (Backend API)
# ============================================================================
DATABASE_URL=postgresql://banana_user:banana_password@localhost:5432/banana_classifier

# ============================================================================
# API (Backend)
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
CHECKPOINT_PATH=./experiments/banana_experiment/checkpoints/best_model.pth

# ============================================================================
# SISTEMA
# ============================================================================
NUM_WORKERS=4
SEED=42
